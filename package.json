{
  "name": "ts-nextjs-template",
  "version": "0.0.1",
  "description": "A simple template project for spinning up React projects using Next.js and TypeScript.",
  "main": "index.js",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start -p 8080",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "jest --collectCoverage true"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/desruc/ts-nextjs-template.git"
  },
  "keywords": [
    "nextjs",
    "node",
    "react",
    "ssr",
    "typescript"
  ],
  "author": "James Cameron",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/desruc/ts-nextjs-template/issues"
  },
  "homepage": "https://github.com/desruc/ts-nextjs-template#readme",
  "dependencies": {
    "@material-ui/core": "^4.11.0",
    "@material-ui/icons": "^4.9.1",
    "@material-ui/styles": "^4.10.0",
    "next": "^9.4.4",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.5",
    "@types/node": "^14.0.23",
    "@types/react": "^16.9.43",
    "@types/styled-jsx": "^2.2.8",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "eslint": "^7.5.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.0.8",
    "jest": "^26.1.0",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.3",
    "typescript": "^3.9.7"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".test.ts(x?)$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.{ts,tsx}"
    ],
    "moduleNameMapper": {
      "~/(.*)$": "<rootDir>/$1"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "jsdom",
    "resetMocks": true
  }
}
